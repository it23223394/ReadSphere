{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -DskipTests",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "aptPkgs": ["openjdk-17-jdk", "maven"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "java -jar backend/target/*.jar"
  }
}